<!-- Scaffolding generated by Casein v5.1.1.3 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Building", :building %></th>
			<th><%= casein_sort_link "City", :city %></th>
			<th><%= casein_sort_link "Country", :city %></th>
			<th><%= casein_sort_link "Image", :image %></th>
			<th><%= casein_sort_link "Date from", :date_from %></th>
			<th><%= casein_sort_link "Date", :date %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% events.each do |event| %>
		<tr>
			<td>
        <b>
          <%= casein_table_cell_link event.title, casein_event_path(event) %>
        </b>
      </td>
			<td><%= casein_table_cell_link event.building, casein_event_path(event) %></td>
			<td><%= casein_table_cell_link event.city, casein_event_path(event) %></td>
			<td><%= casein_table_cell_link event.country, casein_event_path(event) %></td>
      <td width="120">
        <% unless event.image.empty? %>
          <a href="<%= casein_event_path(event) %>">
            <img src="<%= event.image %>" width="150" style="display: block; height: auto; margin: 0 auto 10px">
          </a>
        <% end %>
      </td>
      <td>
        <% unless event.date_from.nil? %>
          <%= casein_table_cell_link(l(Time.at(event.date_from), format: '%d'+'&nbsp;'+'%B'+'&nbsp;'+'%Y'), casein_media_path(event)) %>
        <% end %>
      </td>
      <td>
        <% unless event.date.nil? %>
          <%= casein_table_cell_link(l(Time.at(event.date), format: '%d'+'&nbsp;'+'%B'+'&nbsp;'+'%Y'), casein_media_path(event)) %>
        <% end %>
      </td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_event_path(event), :method => :delete, :data => { :confirm => "Are you sure you want to delete this event?" }) %>
			</td>
		</tr>
	<% end %>
</table>

<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Image", :media_link %></th>
			<th><%= casein_sort_link "ID", :media_id %></th>
			<th><%= casein_sort_link "URL", :media_url %></th>
			<th><%= casein_sort_link "Date", :media_date %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% medias.each do |medias| %>
		<tr>
			<td>
        <a href="<%= casein_media_path(medias) %>">
          <img src="<%= medias.image_url %>" width="150" height="150" alt="Image ID: <%= medias.media_id %>">
        </a>
      </td>
			<td><%= casein_table_cell_link medias.media_id, casein_media_path(medias) %></td>
			<td><%= casein_table_cell_link medias.media_link, casein_media_path(medias) %></td>
      <td>
        <% unless medias.media_date.nil? %>
          <%= casein_table_cell_link(l(Time.at(medias.media_date), format: '%d'+'&nbsp;'+'%B'+'&nbsp;'+'%Y'), casein_media_path(medias)) %>
        <% end %>
      </td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_media_path(medias), :method => :delete, :data => { :confirm => "Are you sure you want to delete this medias?" }) %>
			</td>
		</tr>
	<% end %>
</table>

<!-- Scaffolding generated by Casein v5.1.1.3 -->


<div class="row">
  <div class="col-lg-6">

    <%= casein_text_field f, f.object, :title, casein_label: 'Title EN'%>

    <div class="form-group">
        <!-- cktext_area :news, :text, :rows => 40, :ckeditor => {:toolbar => 'mini'} -->
      <%= casein_text_area f, f.object, :text, rows: 10, casein_label: 'Text EN' %>
    </div>

  </div>

  <div class="col-lg-6">

    <%= casein_text_field f, f.object, :title_fr, casein_label: 'Title FR'%>

    <div class="form-group">
        <!-- cktext_area :news, :text_fr, :rows => 40, :ckeditor => {:toolbar => 'mini'} -->
      <%= casein_text_area f, f.object, :text_fr, rows: 10, casein_label: 'Text FR' %>
    </div>

  </div>

  <div class="col-lg-12">

	  <div class="hidden">
	    <%= casein_date_select f, f.object, :date %>
	  </div>

    <div class="row">
      <div class="col-lg-6">
        <%= casein_select f, f.object, :video_src, {source: %w(YouTube Vimeo)}, casein_label: 'Video source' %>
      </div>

      <div class="col-lg-6">
        <%= casein_text_field f, f.object, :video, casein_label: 'Video ID' %>
      </div>
    </div>


    <div class="row">
      <div class="col-lg-6">
        <%= casein_text_field f, f.object, :image, casein_label: 'Image URL' %>
        <!-- casein_file_field f, f.object, :files, :image, multiple: true -->
      </div>

      <div class="col-lg-6">
        <div class="form-group">
          <label class="control-label">Hide the news</label>
          <div class="well">
            <div class="onoffswitch">
              <%= f.check_box(:hidden, strip_casein_options(id: 'hidden-news', class: 'onoffswitch-checkbox')) %>
              <label class="onoffswitch-label" for="hidden-news"></label>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>


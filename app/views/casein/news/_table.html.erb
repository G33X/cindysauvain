<!-- Scaffolding generated by Casein v5.1.1.3 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link 'Title EN', :title %></th>
			<th><%= casein_sort_link 'Text EN', :text %></th>
			<th><%= casein_sort_link 'Date', :date %></th>
			<th><%= casein_sort_link 'Image', :image %></th>
			<th><%= casein_sort_link 'Video source', :video_src %></th>
			<th><%= casein_sort_link 'Video', :video %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% news.each do |news| %>
		<tr class="<%= 'hidden-news' if news.hidden %>">
			<td>
        <b>
          <%= casein_table_cell_link news.title, casein_news_path(news) %>
        </b>
      </td>
			<td><%= casein_table_cell_link news.text, casein_news_path(news), casein_truncate: 400 %></td>
			<td><%= casein_table_cell_link news.date, casein_news_path(news) %></td>
      <td>
        <% unless news.image.empty? %>
          <a href="<%= casein_news_path(news) %>">
            <img src="<%= news.image %>" width="150" style="display: block; height: auto; margin: 0 auto 10px">
          </a>
        <% end %>
      </td>
			<td><%= casein_table_cell_link news.video_src, casein_news_path(news) %></td>
			<td><%= casein_table_cell_link news.video, casein_news_path(news) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon('trash'), casein_news_path(news), :method => :delete, :data => { :confirm => 'Are you sure you want to delete this news?' }) %>
			</td>
		</tr>
	<% end %>
</table>
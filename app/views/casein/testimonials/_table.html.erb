<!-- Scaffolding generated by Casein v5.1.1.3 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Image URL", :image %></th>
			<th><%= casein_sort_link "Image position", :image_pos %></th>
			<th><%= casein_sort_link "Text EN", :text %></th>
			<th><%= casein_sort_link "Text FR", :text_fr %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% testimonials.each do |testimonial| %>
		<tr>
			<td width="120">
        <b>
          <%= casein_table_cell_link testimonial.name, casein_testimonial_path(testimonial) %>
        </b>
      </td>
			<td>
				<% unless testimonial.image.empty? %>
          <a href="<%= casein_testimonial_path(testimonial) %>">
				    <img src="<%= testimonial.image %>" width="150" style="display: block; height: auto; margin: 0 auto 10px">
          </a>
				<% end %>
			</td>
		  <td width="120"><%= casein_table_cell_link testimonial.image_pos, casein_testimonial_path(testimonial) %></td>
			<td><%= casein_table_cell_link testimonial.text, casein_testimonial_path(testimonial), casein_truncate: 400 %></td>
			<td><%= casein_table_cell_link testimonial.text_fr, casein_testimonial_path(testimonial), casein_truncate: 400 %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_testimonial_path(testimonial), :method => :delete, :data => { :confirm => "Are you sure you want to delete this testimonial?" }) %>
			</td>
		</tr>
	<% end %>
</table>
